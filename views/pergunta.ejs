<%- include ('partials/header.ejs') %>

  <body>
    <%- include ('partials/navbar.ejs') %>

      <div class="container">
        <hr>
        <h1>
          <%- pergunta.titulo %>
        </h1>
        <p>
          <%- pergunta.descricao %>
        </p>
        <hr>
        <div class="card" id="formulario-pergunta">
          <div class="card-header">
            <h3>Fa√ßa uma pergunta</h3>
          </div>
          <div class="card-body">
            <form method="POST" action="/resposta/<%- pergunta.id %>">
              <textarea placeholder="Escreva sua resposta" rows="6" class="form-control" name="corpo"></textarea>
              <br>
              <button type="submit" class="btn btn-primary">Responder</button>
            </form>
          </div>
        </div>
        <br>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
          <br>
          <div class="card">
            <div class="card-body">
                <i class="text-secundary"><small><%- resposta.createdAt %></small></i>
                <br>
                <span><%- resposta.corpo %></span>
            </div>
          </div>
        <% }) %>

      </div>

  </body>
  <%- include ('partials/footer.ejs') %>